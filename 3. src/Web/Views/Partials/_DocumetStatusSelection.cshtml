@using Web.Models
@model Web.ViewModels.Elements.DocumentStatusSelectModel
    
<select class="form-control @Model.ElementClass" style="margin: auto;" 
        name="@Model.ElementName"
        id="@Model.ElementId">
    <option @(Model.SelectedValue.ToUpper().Equals(EDocumentStatus.New.ToString().ToUpper()) ? "selected" : "") value="New">
        @EDocumentStatus.New.ToString()
    </option>
    <option @(Model.SelectedValue.ToUpper().Equals(EDocumentStatus.Updated.ToString().ToUpper()) ? "selected" : "") value="Updated">
        @EDocumentStatus.Updated.ToString()
    </option>
    <option @(Model.SelectedValue.ToUpper().Equals(EDocumentStatus.Complete.ToString().ToUpper()) ? "selected" : "") value="Complete">
        @EDocumentStatus.Complete.ToString()
    </option>
</select>