<section>
    <div class="col-md-12">
        <div class="my-box box-header-boder">
            <div class="box-header">
                <h3>Search</h3>

                <form action="Search" method="post">
                    @Html.HiddenFor(model => model.CabinetId)


                    <div class="row">

                        <div class="form-group">
                            <div class="col-md-3">
                                <label class="pull-right">Index</label>
                            </div>
                            <div class="col-md-3">
                                <select class="form-control" id="search-select-index">
                                    @foreach (var index in Model.TableTitles)
                                    {
                                        <option value="@index.Id" @(index == Model.TableTitles.First() ? "selected" : "")>
                                            @index.Title
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                @foreach (var index in Model.TableTitles)
                                {
                                    switch (index.Type)
                                    {
                                        case IndexValueType.Integer:
                                        case IndexValueType.Float:
                                            <input type="number" class="form-control" name="index-select-input" style="display: none;"
                                                   value="@index.Value" id="search-index-@index.Id" placeholder="@index.Title" />
                                            break;

                                        case IndexValueType.DateTime:
                                            <input type="date" class="form-control" name="index-select-input" style="display: none;"
                                                   value="@index.Value" id="search-index-@index.Id" placeholder="@index.Title" />
                                            break;

                                        default:
                                            <input type="text" class="form-control" name="index-select-input" style="display: none;"
                                                   value="@index.Value" id="search-index-@index.Id" placeholder="@index.Title" />
                                            break;
                                    }

                                }
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-default pull-left">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-primary">
                                    <i class="fa fa-search"></i> Search
                                </button>
                            </div>
                            <br />
                        </div>
                    </div>
                </form>

