@using Web.ViewModels.Elements
@model Web.ViewModels.Home.DetailModel
@{
    ViewBag.Title = "File Details";
    var results = Model?.dokmeeFilesystems;
    int indexPairCount = 0;
    var totalFiles = 0;
    if (results != null && results.Any())
    {
        totalFiles = results.Count();
        indexPairCount = results.First().IndexFieldPairCollection.Count();
    }
    var fileCount = (totalFiles) + " File" + (totalFiles > 1 ? "s" : "");
    var cabinetId = ViewBag.cabinetId;
}

@Html.Partial("_loadingOverlay")
<section>
    <div class="col-md-12">
        <div class="my-box box-header-boder">
            <div class="box-header">
                <h2>Folder: @Model.FolderName</h2>
            </div>
            <hr />
            <div class="box-body">

                @{
                    DocumentItemListModel listIitems = new DocumentItemListModel()
                    {
                        DocumentItems = Model.DocumentItems,
                        TableTitles = Model.TableTitles,
                        CabinetId = Model.CabinetId
                    };
                    Html.RenderPartial("/Views/Partials/_DocumentItemListPartial.cshtml", listIitems);
                }
                @*<table class="table" id="tblfileSystems">
                        <thead>
                            <tr>
                                <th>
